<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextLogin" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/edittext_width</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:layout_marginStart">@dimen/edittext_marginstart_user</item>
        <item name="android:layout_marginEnd">@dimen/edittext_marginend_user</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="buttonLogin" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_marginEnd">@dimen/button_login_marginend</item>
        <item name="android:layout_marginStart">@dimen/button_login_marginstart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="imageViewLogo">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/logo_splash_margintop</item>
        <item name="android:layout_marginBottom">@dimen/logo_splash_marginbottom</item>
    </style>

    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/textView_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textview_size</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titleText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_textview_textsize</item>
        <item name="android:layout_marginTop">@dimen/title_textview_margintop</item>
        <item name="android:layout_marginBottom">@dimen/title_textview_marginbottom</item>
    </style>

    <style name="contentText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/content_text_textsize</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/content_text_marginbottom</item>
        <item name="android:textColor">@color/content_text_color</item>
    </style>

    <style name="mainTextHomeEmployee" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/home_employee_main_textview_textsize</item>
        <item name="android:layout_marginTop">@dimen/home_employee_main_textview_margintop_marginbottom</item>
        <item name="android:layout_marginBottom">@dimen/home_employee_main_textview_margintop_marginbottom</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="hourTextEmployee" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/home_employee_hour_textview_textsize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="homeEmployeeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/home_employee_button_width</item>
        <item name="android:layout_height">@dimen/home_employee_button_height</item>
        <item name="android:layout_marginBottom">@dimen/home_employee_button_marginbottom</item>
        <item name="android:background">@drawable/home_empledo_btn_style</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="titleTables" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">@dimen/weight_app</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/table_title_textview_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/table_title_textview_margintop</item>
        <item name="android:layout_marginBottom">@dimen/table_title_textview_marginbottom</item>
    </style>

    <style name="startEndDateListText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/weight_app</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/table_body_textview_size</item>
        <item name="android:layout_marginTop">@dimen/table_body_textview_margintop_marginbottom</item>
        <item name="android:layout_marginBottom">@dimen/table_body_textview_margintop_marginbottom</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="sucursalesText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">@dimen/weight_app</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/sucursal_text_size</item>
    </style>

</resources>
